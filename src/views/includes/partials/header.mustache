<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
    <meta name="viewport" content="width=device-width"/>

    <title>Styleguide - {{title}}</title>
    <link rel="shortcut icon" href="assets/images/favicon.ico"/>

    <link rel="stylesheet" type="text/css" href="assets/css/markguide.css"/>

    <link rel="stylesheet" type="text/css" href="assets/css/prism.css"/>

    <style>
    {{#projectFonts}}
    @font-face {
        font-family: '{{properties.family}}';
        font-style:  {{properties.style}};
        font-weight: {{properties.weight}};
        src: url("styles/fonts/{{filename}}") format("woff2");
    }
    {{/projectFonts}}
    </style>

    {{#projectStyles}}
    <link rel="stylesheet" type="text/css" href="styles/{{.}}.css"/>
    {{/projectStyles}}

    <script>
        window.contexts = ["global"]
    </script>

    {{#projectScripts}}
    <script async="async" src="scripts/{{.}}.js" crossorigin="anonymous"></script>
    {{/projectScripts}}

    {{> assetshead}}

    <script>
        // Retrieve `asideWidth` from sessionStorage if available
        const asideWidth = window.sessionStorage ? window.sessionStorage.getItem('asideWidth') : false;
    </script>
</head>
<body class="b-markguide-page b-markguide-page_{{type}}">

<div id="js-markguide-icons"></div>
{{> icons}}

<div class="l-markguide-container" id="js-markguide-container">
    {{> aside}}
    <main role="main" class="l-markguide-container__main" id="js-markguide-main">
        <script>
            const mainElement = document.getElementById('js-markguide-main');
            mainElement.style.marginLeft = asideWidth ? `${asideWidth}px` : '';
        </script>
