<div>
    <div class="b-markguide-html" style="{{{style}}}">
        <div class="b-markguide-html__item">
            <h2 class="b-markguide-html__item-heading">Default</h2>
            <div>{{{code}}}</div>
        </div>
        {{#codeArray}}
            <div class="b-markguide-html__item">
                <h2 class="b-markguide-html__item-heading">{{class}} - {{name}}</h2>
                <div>{{{html}}}</div>
            </div>
        {{/codeArray}}
    </div>

    <details class="js-copier b-markguide-markup">
        {{>copyButton}}
        <div class="b-markguide-code">
            <pre><code class="js-copier-text language-{{language}}">{{code}}</code></pre>
        </div>
    </details>
</div>
